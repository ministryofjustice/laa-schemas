{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/ministryofjustice/laa-schemas/main/prototyping/criminal-legal-aid/0.0.1/schemas/conditions/full_means.json",
  "title": "Full means test conditions",
  "description": "Conditions for legal aid applications that are subject to a full means test",
  "if": {
    "properties": {
      "total_income": {
        "minimum": 12475
      }
    },
    "required": ["total_income"]
  },
  "then": { "required": ["outgoings","capital"] }
}
