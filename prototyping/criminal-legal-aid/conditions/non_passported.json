{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://raw.githubusercontent.com/ministryofjustice/laa-schemas/main/prototyping/criminal-legal-aid/conditions/non_passported.json",
  "title": "Non passported conditions",
  "description": "Conditions for legal aid applications that are not passported for means",
  "if": {
    "properties": {
      "benefits_status": {
        "properties": {
          "passported": { "const": false }
        },
        "required": ["passported"]
      }
    }
  },
  "then": {
    "required": ["income", "total_income"]
  }
}
