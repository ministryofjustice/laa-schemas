{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://raw.githubusercontent.com/ministryofjustice/laa-schemas/main/prototyping/criminal-legal-aid/client_details.json",
  "title": "An applicant for criminal legal aid",
  "description": "Holds attributes of an applicant for legal aid; the client of a criminal legal aid provider",
  "type": "object",
  "properties": {
    "client": { "$ref": "#/definitions/person" },
    "has_other_cases": { "type": "boolean" },
    "other_cases_details": { "type": "string" },
    "on_remand": { "type": "boolean" },
    "remanded_date": { "type": "string", "format": "date" },
    "has_partner": { "type": "boolean" },
    "partner": { "$ref": "#/definitions/person" },
    "partner_in_case": { "type": "boolean" },
    "partner_in_case_reason": { "enum": ["co-defendant", "witness", "victim"] },
    "partner_conflict_of_interest": { "type": "boolean" }
  },
  "required": ["client", "has_partner"],
  "dependentRequired": {
    "has_other_cases": ["other_cases_details"],
    "on_remand": ["remanded_date"],
    "has_partner": ["partner", "partner_in_case", "partner_conflict_of_interest"],
    "partner_in_case": ["partner_in_case_reason"]
  },
  "definitions": {
    "person": { "$ref": "https://raw.githubusercontent.com/ministryofjustice/laa-schemas/main/prototyping/general/person.json" }
  }
}
